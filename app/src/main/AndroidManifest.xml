<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BookAlreadyread"
            android:label="Alread read Books"></activity>
        <activity android:name=".Bookcurrentlyreading"
            android:label="Currently reading books"/>
        <activity android:name=".Bookwantread"
            android:label="Want to read books"/>
        <activity android:name=".BookdscrpActivity"
            android:label="Description"/>
        <activity android:name=".BooksSrch"
            android:label="All books"/>
        <activity android:name=".MainActivity"
            android:label="Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>